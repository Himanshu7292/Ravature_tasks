package challenges;

public class Challenge5 {

	public static void main(String[] args) {
		String b ="welcome toddddd javas";
  System.out.println(LastUpper(b));
	}
	public static String LastUpper(String s){
		String a[] = s.split(" ");
		StringBuilder sb= new StringBuilder();
		for (int i = 0 ; i <a.length ; i++) {
		int n=	a[i].length()-1;
		sb.append(a[i].substring(0,3)).append(Character.toUpperCase((a[i].charAt(3)))).append(a[i].substring(4,n)).append(Character.toUpperCase(a[i].charAt(n))).append(" ");
			//sb.append(a[i].substring(0,n)).append(Character.toUpperCase(a[i].charAt(n))).append(" ");
		
		}
	return sb.toString();	
	}

}
